                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/user_name_tv"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="20 april 2022"
                        android:textColor="@color/catgcol"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:text="User Email : "
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/user_email_tv"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="20 april 2022"
                        android:textColor="@color/catgcol"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="User Number  : "
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/usernumber"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="20 april 2022"
                        android:textColor="@color/back_bg"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="User Address  : "
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/useraddress"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="20 april 2022"
                        android:textColor="@color/back_bg"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="User Landmark  : "
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/userlandmark"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:text="20 april 2022"
                        android:textColor="@color/back_bg"
                        android:textSize="12sp" />
                </LinearLayout>






            </LinearLayout>



            <TextView
                android:id="@+id/booking_assigned"
                android:background="@drawable/rect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_alignParentRight="true"
                android:text="   Assigned To   "
                android:padding="@dimen/_3sdp"
                android:backgroundTint="@color/green"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />



           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right"
               android:layout_marginTop="@dimen/_5sdp"
               android:orientation="horizontal">


               <TextView
                   android:id="@+id/payment_update"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:background="@drawable/rect"
                   android:drawableLeft="@drawable/ic_booking"
                   android:drawableTint="@color/green"
                    android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="   Payment Update   "
                   android:gravity="center_vertical"
                   android:padding="@dimen/_1sdp"
                   android:layout_toLeftOf="@+id/goto_live"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/green"
                   android:textSize="13sp"
                   android:layout_marginRight="@dimen/_15sdp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/goto_live"
                   android:layout_toRightOf="@+id/payment_update"

                   android:layout_marginTop="@dimen/_5sdp"
                   android:background="@drawable/rect"
                   android:drawableLeft="@drawable/googlemaps"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/_3sdp"
                   android:layout_alignParentRight="true"
                   android:text="   Map   "
                   android:gravity="center_vertical"
                   android:padding="@dimen/_1sdp"
                   android:layout_gravity="center_vertical"
                   android:textColor="@color/colorPrimary"
                   android:textSize="13sp"
                   android:textStyle="bold" />


           </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


