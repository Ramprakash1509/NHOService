<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Orders_Details_Activity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_ordername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="SS Welding Rod" />

            <LinearLayout
                android:id="@+id/materialCardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                 >

                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rnd_logo" />

            </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">


             <TextView
                 android:id="@+id/txtorderbillings"
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:textSize="20sp"
                 android:visibility="gone"
                 android:layout_marginLeft="@dimen/_20sdp"
                 android:layout_marginTop="@dimen/_20sdp"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:layout_marginBottom="10dp"
                 android:text="Product Specifications" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="5dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_marginBottom="@dimen/_5sdp"
                 android:background="@drawable/rect_dashboad"
                 android:orientation="vertical">


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/_5sdp"
                     android:layout_weight="2"
                     android:orientation="horizontal">


                     <TextView
                         android:id="@+id/textView22"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10dp"
                         android:layout_weight="1"

                         android:text="Service date:"
                         android:textColor="@color/black"
                         android:textSize="13sp" />

                     <TextView
                         android:id="@+id/txt_orderdate"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"

                         android:layout_weight="1"

                         android:text="31 Dec 2021"
                         android:textSize="12sp" />
                 </LinearLayout>


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:layout_marginLeft="@dimen/_5sdp"
                     android:orientation="horizontal">


                     <TextView
                         android:id="@+id/textView22r"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10dp"
                         android:layout_weight="1"

                         android:text="Service Time  :"
                         android:textColor="@color/black"
                         android:textSize="13sp" />

                     <TextView
                         android:id="@+id/txt_ordertime"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"

                         android:layout_weight="1"

                         android:text="407-62857"
                         android:textSize="12sp" />
                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/_5sdp"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:orientation="horizontal"
                     android:weightSum="2">


                     <TextView
                         android:id="@+id/textView2k2"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10dp"
                         android:layout_weight="1"
                         android:text="Order Total:"
                         android:textColor="@color/black"
                         android:textSize="13sp" />

                     <TextView
                         android:id="@+id/txt_ordertotal"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"

                         android:layout_weight="1"

                         android:text="₹500"
                         android:textSize="12sp" />
                 </LinearLayout>


             </LinearLayout>


         </LinearLayout>

            <TextView
                android:id="@+id/txtorde"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/green"
                android:layout_marginBottom="10dp"
                android:text="Address : " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rect_dashboad"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_orderbillingadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                      android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtordershipping"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                 android:layout_marginBottom="10dp"
                android:textColor="@color/green"
                android:text="Landmark : " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rect_dashboad"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_orderlandmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                      android:textSize="14sp" />

            </LinearLayout>

            <TextView
                 android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/green"
                 android:text="Order Summary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_dashboad"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="2"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_productname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Item Price:"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="₹ 500"
                        android:textSize="14sp"/>


                </LinearLayout>




            </LinearLayout>



        </LinearLayout>



    </ScrollView>


</LinearLayout>