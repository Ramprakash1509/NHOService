<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CompanyOverviewActivity">


    <include layout="@layout/toolbar"/>

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
    android:layout_width="match_parent"
                android:id="@+id/select_car_image"
    android:src="@drawable/carwashbanner"
    android:scaleType="fitXY"
    android:layout_height="@dimen/_150sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="@color/backgrondlayout"
                    android:layout_height="50dp"
                     android:src="@drawable/rnd_logo"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="NHO Serviceboy"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="12sp"
                        android:singleLine="true"
                         android:text="E-1/151, Priyadarshini Colony, Sector-C, Sitapur Road"
                         android:textColor="@color/catgcol"
                        android:layout_gravity="center"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
       android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="4.9 Review"
                          android:textColor="@color/blue"
                        android:layout_gravity="center"
                        android:gravity="center_vertical" />


                </LinearLayout>


                <ImageView
                     android:layout_width="36dp"
                    android:visibility="gone"
                     android:layout_alignParentRight="true"
                     android:layout_height="40dp"
                     android:padding="@dimen/_5sdp"
                     android:src="@drawable/heart"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">





            </LinearLayout>


            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:text="Services"
        android:id="@+id/tv_Services"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rect_gradient_spla"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="@drawable/rect_gradient_spla"
        android:text="About Us"
        android:id="@+id/tv_AboutUs"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="@drawable/rect_gradient_spla"
        android:text="Review"
        android:id="@+id/tv_Review"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        />


</LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_container">

            </FrameLayout>






        </LinearLayout>


   <!-- </ScrollView>-->

</LinearLayout>