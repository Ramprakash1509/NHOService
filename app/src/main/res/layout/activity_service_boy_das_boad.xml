<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity.ServiceBoyDasBoad">
    <include
        android:id="@+id/toolbar"
        layout="@layout/serviceboy"
        />
    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/assignService"
                android:background="@drawable/rect_dashboad"
                android:layout_gravity="center"
                android:layout_height="@dimen/_90sdp"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:background="@drawable/circle_oval"
                    android:backgroundTint="@color/grey_bd"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_booking" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Assigned Services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_3sdp"
                android:id="@+id/completedService"
                android:background="@drawable/rect_dashboad"
                android:layout_gravity="center"
                android:layout_height="@dimen/_90sdp"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:background="@drawable/circle_oval"
                    android:backgroundTint="@color/grey_bd"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check_mark"
                    card_view:tint="@color/colorPrimary"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Completed Services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dailyservices"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_90sdp"
                android:background="@drawable/rect_dashboad"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_oval"
                    android:backgroundTint="@color/grey_bd"
                    android:padding="@dimen/_12sdp"
                    card_view:tint="@color/colorPrimary"
                    android:src="@drawable/ic__4_hours" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Daily Services "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/profile"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="@dimen/_158sdp"
                android:layout_height="@dimen/_90sdp"
                android:background="@drawable/rect_dashboad"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_oval"
                    android:backgroundTint="@color/grey_bd"
                    android:padding="@dimen/_12sdp"

                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="My Profile "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>