<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lohoyint"
    android:layout_height="match_parent"
    tools:context=".Activity.SignupActivity">

    <include layout="@layout/toolbar"
        android:visibility="gone"
        android:id="@+id/toolbar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/li_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/lohoyint"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="Profile Update"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/background_login"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/m1"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="#9C27B0"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/user"
                    android:tint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/m1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Full Name"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/et_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/m1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="Full Name"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#7A7878"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_login"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/m2"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="#68C5D1"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_phone_call"
                    android:tint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/m2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Phone Number"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/ed_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/m1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="8585748855"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#7A7878"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_login"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/m3"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="#ED568A"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_email_ican"
                    android:tint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/m3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Email Address"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/m1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint=" email@gmimim.com "
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#7A7878"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_login"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/m4"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="#FF9800"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/nav_location"
                    android:tint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/m4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Address"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/ed_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/m1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="   "
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#7A7878"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_login"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/m5"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/white_circle"
                    android:backgroundTint="#4CAF50"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/nav_location"
                    android:tint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/m5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Landmark"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/ed_Landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/m1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="   "
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="#7A7878"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/im_edit"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_edit_24"
                android:tint="@color/colorPrimary"
                android:background="@drawable/white_circle"
                android:backgroundTint="#FBE8E8"
                android:layout_height="50dp" />

        </RelativeLayout>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text=" Update  "
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>