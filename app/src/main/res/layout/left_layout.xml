<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125sp">


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="8dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:visibility="gone"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/imageView1"

                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:id="@+id/name"
                    android:singleLine="true"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:id="@+id/emailid"
                    android:singleLine="true"

                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />

                <TextView
                    android:singleLine="true"

                    android:id="@+id/phone"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
         android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:drawableTint="@color/back_bg"
            android:id="@+id/home_tv"
            android:background="@drawable/rect_navi"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Home"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"/>



        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_add_shop"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rect_navi"
            android:backgroundTint="@color/white"
            android:drawableTint="@color/back_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Add Service Boy"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_add_shop_list"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rect_navi"
            android:backgroundTint="@color/white"
            android:drawableTint="@color/back_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Service Boy List"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/adminNotification"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rect_navi"
            android:backgroundTint="@color/white"
            android:drawableTint="@color/back_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/notification"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Notification"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rect_navi"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:id="@+id/id_Logout"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:drawableTint="@color/back_bg"
            android:layout_height="@dimen/_30sdp"
            android:text="Logout"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"/>




    </LinearLayout>







</LinearLayout>