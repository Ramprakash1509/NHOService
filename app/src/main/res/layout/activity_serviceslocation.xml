<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".Activity.CarWashActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:tint="@color/colorPrimary"
                android:src="@drawable/rect_toolbar"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="@dimen/_20sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:id="@+id/backprese"
                android:layout_marginLeft="@dimen/_15sdp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_height="@dimen/_25sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Services Location"
                android:id="@+id/texttoolbar"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <include layout="@layout/activity_maps" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_alignParentBottom="true"
                  android:id="@+id/tv_Continue"
                  android:layout_below="@+id/li_loginn"
                  android:layout_marginEnd="@dimen/_20sdp"
                  android:layout_marginStart="@dimen/_20sdp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginBottom="20dp"
                  android:layout_height="50dp"
                  android:textSize="17sp"
                  android:text="  Continue  "
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:background="@drawable/rect_gradient_spla"/>


          </RelativeLayout>


        </LinearLayout>


</RelativeLayout>