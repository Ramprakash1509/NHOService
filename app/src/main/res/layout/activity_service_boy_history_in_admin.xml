<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Admin.ServiceBoyHistoryInAdmin">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/all_bookimg"
            android:background="@drawable/rect_dashboad"
            android:layout_gravity="center"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:background="@drawable/circle_oval"
                android:backgroundTint="@color/grey_bd"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_12sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_booking" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text=" History "
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/dailybooking"
            android:background="@drawable/rect_dashboad"
            android:layout_gravity="center"
            android:layout_height="@dimen/_70sdp"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:background="@drawable/circle_oval"
                android:backgroundTint="@color/grey_bd"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_12sdp"
                android:layout_gravity="center"
                card_view:tint="@color/colorPrimary"
                android:src="@drawable/ic__4_hours" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="Daily History"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />



        </LinearLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:id="@+id/main_container"
        android:layout_below="@+id/ll1"
        android:background="#F3F2F2">

    </FrameLayout>

</LinearLayout>