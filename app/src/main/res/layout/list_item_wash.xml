<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:backgroundTint="#9EF1F1F1"
        android:background="@drawable/background_login"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/carimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/white_circle"
            android:backgroundTint="#FBD3D0"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/rnd_logo" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/carimage"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ValidityMonth_bw_1"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:text="Car Wash"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:text="Price :  Rs.150"
                android:id="@+id/Price_bw_1"
                android:textColor="@color/catgcol"
                android:textSize="12sp" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/rd_bw_1"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_5sdp" />

    </RelativeLayout>



</LinearLayout>